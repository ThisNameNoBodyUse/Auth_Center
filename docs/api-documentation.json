                          "id": {"type": "integer"},
                          "username": {"type": "string"},
                          "email": {"type": "string"},
                          "phone": {"type": "string"},
                          "is_super_admin": {"type": "boolean"},
                          "status": {"type": "integer"},
                          "created_at": {"type": "string"}
                        }
                      }
                    },
                    "pagination": {
                      "type": "object",
                      "properties": {
                        "page": {"type": "integer"},
                        "page_size": {"type": "integer"},
                        "total": {"type": "integer"},
                        "total_page": {"type": "integer"}
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/app/roles": {
      "get": {
        "tags": ["应用资源管理", "角色管理"],
        "summary": "获取角色列表",
        "description": "获取当前应用的角色列表（系统级和应用级超级管理员）",
        "security": [{"BearerAuth": []}],
        "parameters": [
          {
            "name": "app_id",
            "in": "query",
            "description": "应用ID（系统级超级管理员可指定，应用级超级管理员忽略此参数）",
            "schema": {"type": "string"}
          },
          {
            "name": "page",
            "in": "query",
            "description": "页码",
            "schema": {"type": "integer", "default": 1}
          },
          {
            "name": "page_size",
            "in": "query",
            "description": "每页数量",
            "schema": {"type": "integer", "default": 10}
          }
        ],
        "responses": {
          "200": {
            "description": "获取成功",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "id": {"type": "integer"},
                          "name": {"type": "string"},
                          "code": {"type": "string"},
                          "description": {"type": "string"},
                          "status": {"type": "integer"},
                          "created_at": {"type": "string"},
                          "updated_at": {"type": "string"}
                        }
                      }
                    },
                    "pagination": {
                      "type": "object",
                      "properties": {
                        "page": {"type": "integer"},
                        "page_size": {"type": "integer"},
                        "total": {"type": "integer"},
                        "total_page": {"type": "integer"}
                      }
                    }
                  }
                }
              }
            }
          }
        }
